<script type="text/javascript">
	function validar(){
		var asunto = $("#asunto").val();
		var contenido = $("#contenido").val();
		if(!asunto || asunto.length <6 || !contenido || contenido.length <18){
			alertify.set({ delay: 8000});
			alertify.error("rellana el formulario con el mÃ­nimo de caracteres.");
			return false;
		}else{
			$("#asistencia").submit();
		}
	}
</script>
<div class="well">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-3 col-md-offset-2 col-sm-offset-2">
