<h1 class="well-info title">Login</h1>
<script>
function enviar(){
var l = document.getElementById('login').value;
var p = document.getElementById('password').value;
if(l=='' || p==''){
  alertify.error("Tienes que rellenar los campos de login y contrase単a");
  return false;
}else{
  document.getElementById("submit").click();
}}
</script>
<div class="well">
<form method='POST' action='/'>

  <input type='hidden' name='redir' value='<%= redir %>'>
<div style="margin:20px" class="form-horizontal">

  <!-- Informacion del login -->
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-8">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-user"></i></span>
        <input type="text" name="login" class="form-control required" placeholder="Login" aria-describedby="basic-addon1">
      </div>
    </div>
  </div>
  
<!-- Informacion de la contrase単a -->
  <div class="row top-buffer">
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-8">
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon2"><i class="glyphicon glyphicon-lock"></i></span>
        <input type="password" name="password" class="form-control required" placeholder="Contrase単a" aria-describedby="basic-addon2">
      </div>
    </div>
  </div>

<!-- Informacion del boton login -->
  <div class="row top-buffer">
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-8">
      <input name="commit" type="submit" id="submit" value="Login" class="btn btn-custom" onclick='return enviar()' placeholder='Enviar'/>
    </div>
  </div>

  <div class="row top-buffer">
    <div class="col-xs-12 col-sm-10 col-md-8 col-lg-8">
      <a href="/login/contrasena_olvidada">多Has olvidado tus credenciales?</a>
    </div>
  </div>

</div>
</form>
</div>
